@model samsung.Rh.Employee.Domain.Entities.Employees
@{
    ViewBag.Title = "Registro";
}

    <div class="container">
        <br />
        @ViewBag.MsgError
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="form-group">
                    <input type="text" class="form-control" name="Nome" id="Nome" />
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.SobreNome, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.BairroId, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-save"> Registrar</span>
                    </button>
                </div>
            </div>


        }
    </div>

